{
    "builds": [{
        "src": "ecom/ecom/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "30mb", "runtime": "python3.13.7" }
    },
    {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": { "distDir": "staticfiles_build" }
    }],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "ecom/ecom/wsgi.py"
        }
    ]
}